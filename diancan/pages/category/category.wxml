<!--pages/categories/categories.wxml-->
<view class="main">
        <view class="category-left">
            <view wx:for="{{category}}" wx:key="{{item.id}}" data-id="{{item.id}}"
             data-index="{{index}}" bindtap="switchCategory" class="cate-list {{curIndex===index?'on':''}}">
                <text>{{item.name}}</text>
            </view>
        </view>
        <scroll-view class="category-right" scroll-y
        scroll-into-view="{{toView}}" scroll-with-animation="true">
            <block wx:for="{{detail}}" wx:key="{{item.id}}">
                <view class="cate-box" id="{{item.id}}">
                    <view class="cate-banner">
                        <image src="{{item.banner}}"/>
                    </view>
                    <view class="cate-title">
                        <text>{{item.cate}}</text>
                    </view>
                    <view class="product">
                        <view class="product-list" wx:for="{{item.detail}}" wx:key="{{index}}" wx:for-item="product">
                            <image src="{{product.thumb}}"></image>
                            <view class="product_ame">
                                <text>{{product.name}}</text>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
        </scroll-view>
    </view>
    