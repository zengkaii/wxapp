page, .main {
    height: 100%;
  }
  .category-left {
    float: left;
    width: 150rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
  }
  
  .category-left .cate-list {
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
  }
  
  .category-left .cate-list.on {
    border-color: #AB956D;
    color: #AB956D;
  }
  
  .category-right {
    float: right;
    width: 600rpx;
    height: 100%;
    overflow: hidden;
  }
  .cate-box {
    padding: 40rpx;
    box-sizing: border-box;
    height: 100%;
  }
  .cate-box .cate-banner image {
    display: block;
    width: 100%;
    height: 190rpx;
    border: 1px solid red;
    box-sizing: border-box;
  }
  .cate-title {
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding: 30rpx 0 55rpx;
    text-align: center;
    color: #ab956d;
    font-size: 28rpx;
  }
  .cate-title::before {
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
  }
  .product-list {
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin: 0 20rpx 20rpx 0;
    font-size: 24rpx;
  }
  
  .product-list image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
    border: 1px solid red;
    box-sizing: border-box;
  }
  .product-list:nth-child(3n) {
    margin-right: 0;
  }
  