/* pages/user/user.wxss */
.main{
    background-color: #cac2c2;
}
.header{
    background: #fff;
    position: relative;
    line-height: 100rpx;
    height: 200rpx;
    padding: 60rpx 20rpx 60rpx 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: black;
}
.header .header-username{
    font-size: 14pt;
    font-weight: 400;
    position: absolute;
    top: 40rpx;
    left: 20rpx;
}
/* 离开了文档流 */
.header .thumb{
    display: block;
    /* background:#fff; */
    position: absolute;
    top: 60rpx;
    right: 20rpx;
    width: 105rpx;
    height: 105rpx;
    /* border: 1px solid rgb(182, 19, 19); */
    border-radius: 100rpx;
}
.header .about{
    /* float: right; */
    font-weight: 350;
    font-size: 9pt;
    position: absolute;
    top: 90rpx;
    left: 20rpx;

}
.item{
   margin-top: 0;
   position: relative;
   border-bottom: 1px solid #d9d9d9;
}
.item_after{
    border: none;
}
.item .list_image{
    padding-top: 10px;
    padding-bottom: 10px;
    margin-left: 10px;
}
.item .list_bd{
    font-size: 9pt;
    font-weight: 350;
    color: #000;
    position: absolute;
    top: 35rpx;
    left: 100rpx; 

}
.item .list_md{
    position: absolute;
    top: 37rpx;
    right: 50rpx; 
    /* text-align: right; */
    font-size: 7pt;
    color: #978c8c;
}

.list_ft_access{
    padding-right:13px;
    /* position:relative */
}
.list_ft_access::after{
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 10px;
}
.ft{
    position: relative;
    height: 381rpx;
    background-color: #fcf8f8;
    text-align: center;
}
.exit{
