/* pages/login/login.wxss */
.main{
    padding-left: 50rpx;
    padding-right: 50rpx;
}
.login-hd{
    padding-top: 60rpx;
}
.login-hd view{
    display: inline-block;
}
.login-hd__left{
    font-size: 12pt;
    font-weight: 500;
}
.login-hd__right{
    float: right;
    margin-top: 8rpx;
    font-size: 9pt;
    color: #21ad43;
}
.login-bd{
    margin-top: 70rpx;
}
.login-bd .login-bd-phnumber view{
    display: inline-block;
}
.login-bd-phnumber{
    position: relative;
}
.login-bd-phnumber .select{
    font-size: 12pt;
    border-bottom: 1px solid #d9d9d9;
    padding-bottom: 20rpx;
    width: 100rpx;

}
.select::after{
    content: " ";
    display: inline-block;
    height: 4px;
    width: 4px;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    /* -webkit-transform: matrix(0.4, 0.4, -0.4, 0.4, 0, 0); */
    /* transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0); */
    transform: rotateZ(135deg);
    position: relative;
    top: -2rpx;
    position: absolute;
    top: 50%;
    margin-top: -20rpx;
    right: 570rpx;
}
.phone{
    position: absolute;
    left: 150rpx;
    top: 2rpx;
    /* margin-bottom: 20rpx; */
    border-bottom: 1px solid #d9d9d9;
    width: 500rpx;
}
.phone:hover{
    border-bottom:1px solid #21ad43;
}
.phone input{
    font-size: 12pt;
    padding-bottom: 20rpx;
    /* border-bottom: 1px solid #000; */
}
.login-bd-comfirm{
    margin-top: 50rpx;
    border-bottom: 1px solid #d9d9d9;
}
.login-bd-comfirm view{
    display: inline-block;
}
.login-bd-comfirm:hover{
    border-bottom: 1px solid #21ad43;
}
.login-bd-comfirm view{
    /* display: flex; */
}
.login-bd-comfirm-input{
    font-size: 12pt;
    letter-spacing: 1px;
    /* width: 400rpx; */
}

.login-bd-comfirm-get{
    float: right;
    letter-spacing: 1px;
    font-size: 10pt;
    margin-top: 8rpx;
    margin-right: 20rpx;
}
.login-btn{
    margin-top: 60rpx;
    text-align: center;
}
.login-btn .btn{
    font-size: 12pt;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    background-color: #21ad43;
    color: #fff;
}
.login-detail{
    margin-top: 30rpx;
    font-size: 10pt;
}
.login-detail view{
    display: inline-block;
}
.login-detail .detail{
    color: #d9d9d9;
}
.login-password{
    font-size: 10pt;
    color: #21ad43;
    /* margin-bottom: 50rpx; */
    margin-top: 500rpx;
    margin-left: 0;
}
